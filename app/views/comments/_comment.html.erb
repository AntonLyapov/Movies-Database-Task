<div class="card mb-4">
  <div class="card-header d-flex">
    <div class="ml-left">
      <div class="avatar-holder align-self-baseline mr-">
        <%= image_tag comment.user.avatar.url(:thumb), alt: "#{comment.user.name} image" %>
        <br/>
        <%= link_to comment.user.name, comment.user %>
      </div>
      <!-- movie: <%= comment.movie.title %> -->
    </div>

    <% if current_user %>
    <div class="ml-auto">
      <% if current_user == comment.user %>
      <%= link_to 'Edit', edit_movie_comment_path(comment.user, comment), class: 'btn btn-warning btn-sm' %>
      <% end %>

      <% if current_user == comment.user || current_user.admin? || current_user.moderator? %>
      <%= link_to 'Delete',
      comment,
      method: :delete,
      class: 'btn btn-danger btn-sm',
        data: { confirm: 'Are you really sure you want to delete this comment (it will be gone for good) ?' } %>
        <% end %>
      </div>
      <% end %>
    </div>

    <div class="card-body d-flex">
      <blockquote class="blockquote mb-0">
        <p><%= comment.text %></p>
        
      </blockquote>
    </div>
  </div>